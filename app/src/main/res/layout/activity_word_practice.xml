<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/instrText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textSize="26dp"
        android:text="Repeat the words below the image, and check for correct pronunciation?" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/prevImage"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/nextImage"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/next"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:background="@color/white"/>

    </LinearLayout>


    <TextView
        android:id="@+id/wordCopyrightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Copyright &#169; LEADERSPROJECT, Columbia University" />

    <ImageView
        android:id="@+id/wordImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/recordedBtn"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:text="Listen" />

        <ImageButton
            android:id="@+id/recBtn"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:text="Record" />

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:text="Play" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/recordedText"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="Listen" />

        <TextView
            android:id="@+id/recText"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:text="Record" />

        <TextView
            android:id="@+id/playText"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Play" />

    </LinearLayout>

    <TextView
        android:id="@+id/heardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="26dp"
        android:gravity="left"
        android:textStyle="bold"
        android:text="What we Heard?" />

    <TextView
        android:id="@+id/repeatText"
        android:background="@drawable/my_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="42dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="34dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Score: - / -" />

</LinearLayout>